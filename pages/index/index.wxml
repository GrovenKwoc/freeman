	<view class="cu-bar search bg-white">
		<view class="search-form round">
			<text class="cuIcon-search"></text>
			<input type="text" placeholder="大家都在搜: 包餐、薪资、福利" confirm-type="search"></input>
		</view>
	</view>
	<view class="index-icon">
		<image src="../../images/index-icon.png" mode='aspectFit'></image>
	</view>
	<view class="list-title">
		<text>热门职位</text>
		<text>筛选</text>
	</view>


	<view class="cu-card article {{isCard?'no-card':''}}">
		<view class="cu-item shadow">
			<view class="title">
				<view class="text-cut">线路设计专员
					<!-- <view class="cu-tag bg-green light sm round">已认证</view> -->
					<text class="fr text-red">8k~12k</text>
				</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="index-content text-gray">
						<view class="ic-box">
							<text>郑州</text>
							<text>大专及以上</text>
							<text>1-3年</text>
						</view>
						<text>2月15日</text>
					</view>
					<view class="index-card-bottom">
						<view class="cu-avatar lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
						<view class="icb-content">
							<view class="text-blank">普修设计</view>
							<view class="text-gray text-sm flex">
								<text class="text-cut">
							   天使轮 | 15 - 50 人 | 移动互联网
								</text>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="cu-item shadow" wx:for="{{DataArr}}" bindtap="goDetail" data-id="{{item.id}}">
			<view class="title">
				<view class="text-cut">{{item.job_name}}
					<view class="cu-tag bg-green light sm round">已认证</view>
					<text class="fr text-red">{{item.min_price}}-{{item.max_price}}</text>
				</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="index-content text-gray">
						<text>{{item.operator}}</text>
						<text>到岗时间:5月20日</text>
						<text>工期：3个月</text>
					</view>
					<view class="index-card-bottom">
						<view>
							<view class="cu-tag bg-red light sm round">
								<text class='cuIcon-location'></text> {{item.city}}
							</view>
							<view class="cu-tag bg-green light sm round">需要
								<text>13</text>人</view>
							<view class="cu-tag bg-yellow light sm round">已有
								<text>25</text>人申请</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>