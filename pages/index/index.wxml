<home wx:if="{{PageCur=='home'}}"></home>
<office wx:if="{{PageCur=='office'}}"></office>
<message wx:if="{{PageCur=='message'}}"></message>
<about wx:if="{{PageCur=='about'}}"></about>
<view class="cu-bar tabbar bg-white shadow foot">
  <view class="action" bindtap="NavChange" data-cur="home">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/{{PageCur=='home'?'select_':''}}home.png"></image>
    </view>
    <view class="{{PageCur=='home'?'text-green':'text-gray'}}">首页</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="office" wx:if="{{userType}}">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/office{{PageCur=='office'?'_select':''}}.png"></image>
    </view>
    <view class="{{PageCur=='office'?'text-green':'text-gray'}}">职位</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="message">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/work{{PageCur=='message'?'_select':''}}.png"></image>
    </view>
    <view class="{{PageCur=='message'?'text-green':'text-gray'}}">消息</view>
  </view>
  <view class="action" bindtap="NavChange" data-cur="about">
    <view class='cuIcon-cu-image'>
      <image src="/images/tabbar/my{{PageCur=='about'?'_select':''}}.png"></image>
    </view>
    <view class="{{PageCur=='about'?'text-green':'text-gray'}}">我的</view>
  </view>
</view>