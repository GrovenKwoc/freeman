<view class='cu-custom'>
	<view class="cu-bar bg-gradual-blue" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
		<navigator class='action' delta="1" hover-class="none" url="/page/my/my">
			<text class='cuIcon-location'></text> 郑州
		</navigator>
		<view class='content' style='top:{{StatusBar}}px;'>首页</view>
	</view>
</view>
<scroll-view scroll-y style="height: 1100rpx;padding-bottom: 30rpx;">
	<view class="banner-box">
		<swiper class="screen-swiper round-dot" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500">
			<swiper-item wx:for="{{switerList}}" wx:key="index" bindtap="goLocaltion">
				<image src="http://ctziyouren.cn/upload/index-baner.jpg" mode='center'></image>
			</swiper-item>
		</swiper>
	</view>

	<!--
<view class="cu-list grid col-2">
