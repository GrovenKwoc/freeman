	<view class="cu-bar search bg-white">
		<view class="search-form round">
			<text class="cuIcon-search"></text>
			<input type="text" placeholder="大家都在搜: 包餐、薪资、福利" confirm-type="search"></input>
		</view>
	</view>
	<view class="index-icon">
		<image src="../../../images/index-icon.png" mode='aspectFit'></image>
	</view>
	<view class="list-title">
		<text>热门职位</text>
		<text bindtap="selectBtn">筛选</text>
	</view>


	<view class="cu-card article {{isCard?'no-card':''}}">
		<view class="cu-item shadow" wx:for="{{DataArr}}" wx:key="ids" bindtap="goDetail" data-id="{{item.id}}">
			<view class="title">
				<view class="text-cut">{{item.job_name}}
					<!-- <view class="cu-tag bg-green light sm round">已认证</view> -->
					<text class="fr text-red">{{item.min_price}}-{{item.max_price}}</text>
				</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="index-content text-gray">
						<view class="ic-box">
							<text>{{item.operator}}</text>
							<text>大专及以上</text>
							<text>{{item.working_years}}</text>
						</view>
						<text>{{item.last_time}}</text>
					</view>
					<view class="index-card-bottom">
						<view class="cu-avatar lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
						<view class="icb-content">
							<view class="text-blank">{{item.company_name}}</view>
							<view class="text-gray text-sm flex">
								<text class="text-cut">
							   天使轮 | 15 - 50 人 | 移动互联网
								</text>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</scroll-view>