.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover; */
  height: 550rpx;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  padding-top: 100rpx;
  position: relative;
}

.UCenter-bg .my-top {
  display: flex;
  justify-content: space-around;
  align-content: center;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .my-top .text-xl{
  font-weight: blod;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.userAvatarUrl{
  width: 150rpx;
}

.text-xl {
  margin-top: 30rpx;
}

.money-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 10rpx;
}

.money-list view text{
  display: block;
  text-align: center;
}