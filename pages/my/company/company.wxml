<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">修改公司信息</view>
</cu-custom>
<form bindsubmit="formSubmit">
  <view class="cu-form-group">
    <view class="title">公司名称</view>
    <input placeholder="请输入公司名称" name="realname" value="{{info.realname}}" disabled="{{formEdit}}"></input>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">公司简介</view>
    <textarea maxlength="-1" name="desc" disabled="{{formEdit}}" bindinput="textareaBInput" placeholder="写一段话介绍一下公司信息" value="{{info.desc}}"></textarea>
  </view>
  <view class="cu-form-group">
    <view class="title">联系方式</view>
    <input placeholder="输入手机号码" name="mobile" type="number" value="{{info.mobile}}" disabled="{{formEdit}}"></input>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <view class="cu-modal bottom-modal {{modalName=='ChooseModalPro'?'show':''}}" bindtap="hideModal">
    <view class="cu-dialog" catchtap>
      <view class="cu-bar bg-white">
        <view class="action text-blue" bindtap="hideModal">取消</view>
        <view class="action text-green" bindtap="hideModal">确定</view>
      </view>
      <view class="grid col-3 padding-sm">
        <view wx:for="{{profession}}" class="padding-xs" wx:key="{{index}}">
          <button class="cu-btn orange lg block {{item.checked?'bg-orange':'line-orange'}}" bindtap="ChooseProfession" data-value="{{item.value}}"> {{item.name}}
          </button>
        </view>
      </view>
    </view>
  </view>

 <view class="cu-modal bottom-modal {{modalName=='ChooseModal'?'show':''}}" bindtap="hideModal">
    <view class="cu-dialog" catchtap>
      <view class="cu-bar bg-white">
        <view class="action text-blue" bindtap="hideModal">取消</view>
        <view class="action text-green" bindtap="hideModal">确定</view>
      </view>
      <view class="grid col-3 padding-sm">
        <view wx:for="{{operator}}" class="padding-xs" wx:key="{{index}}">
          <button class="cu-btn orange lg block {{item.checked?'bg-orange':'line-orange'}}" bindtap="ChooseOperator" data-value="{{item.value}}"> {{item.name}}
          </button>
        </view>
      </view>
    </view>
  </view>
 
  <view class="cu-form-group">
    <view class="title">营业执照编号</view>
    <input placeholder="请输入营业执照编号" name="idcard" type="idcard" disabled="{{formEdit}}" value="{{info.idcard}}"></input>
  </view>
  <view class="cu-bar bg-white">
    <view class="action">
      上传营业执照
    </view>
    <view class="action">
      {{imgList.length}}/2
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-blue lg" bindtap="editBtn" wx:if="{{!btnStatus}}">修改</button>
    <button class="cu-btn bg-blue lg" form-type="submit" wx:if="{{btnStatus}}">保存</button>
    <button class="cu-btn bg-red margin-tb-sm lg" bindtap="cannelBtn" wx:if="{{btnStatus}}">取消</button>
  </view>
</form>