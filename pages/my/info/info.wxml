<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">我的简历</view>
</cu-custom>
<form>
  <view class="cu-form-group">
    <view class="title">真实姓名</view>
    <input placeholder="请输入真实姓名" name="realname" value="{{info.realname}}"></input>
  </view>
  <view class="cu-form-group align-start">
    <view class="title">个人简介</view>
    <textarea maxlength="-1" name="desc" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="写一段话介绍一下自己" value="{{info.desc}}"></textarea>
  </view>
  <view class="cu-form-group">
    <view class="title">手机号码</view>
    <input placeholder="输入手机号码" name="mobile" type="number" value="{{info.mobile}}"></input>
    <view class="cu-capsule radius">
      <view class="cu-tag bg-blue">
        +86
      </view>
      <view class="cu-tag line-blue">
        中国大陆
      </view>
    </view>
  </view>
  <view class="cu-form-group">
    <view class="title">工作年限</view>
    <picker bindchange="jobDatePickerChange" name="jobDate" value="{{jobDate}}" range="{{jobDatePicker}}">
      <view class="picker">
        {{jobDate?jobDatePicker[jobDate]:'请选择'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">选择专业</view>
    <input placeholder="请输入专业" name="profession" bindtap="showModal" data-target="DrawerModalA"></input>
  </view>
  <view class="cu-modal drawer-modal justify-end {{modalName=='DrawerModalA'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <view class="cu-list menu text-left">
      <view class="cu-item arrow" wx:for="{{profession}}" wx:key='index'>
        <view class="content">
          <view>{{item}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
  <view class="cu-form-group">
    <view class="title">运营商</view>
    <input placeholder="可多选" name="operator" bindtap="showModal" data-target="DrawerModalB"></input>
  </view>
  <view class="cu-modal drawer-modal justify-end {{modalName=='DrawerModalB'?'show':''}}" bindtap="hideModal">
  <view class="cu-dialog basis-lg" catchtap style="top:{{CustomBar}}px;height:calc(100vh - {{CustomBar}}px)">
    <view class="cu-list menu text-left">
      <view class="cu-item arrow" wx:for="{{operator}}" wx:key='index'>
        <view class="content">
          <view>{{item}}</view>
        </view>
      </view>
    </view>
  </view>
</view>
  <view class="cu-form-group">
    <view class="title">期望工作地点</view>
    <input placeholder="输入期望工作地点" name="location"></input>
    <text class="cuIcon-locationfill text-orange"></text>
  </view>
  <view class="cu-form-group">
    <view class="title">可接受付款方式</view>
    <picker bindchange="payTypePickerChange" name="payType" value="{{payType}}" range="{{payTypePicker}}">
      <view class="picker">
        {{payType?payTypePicker[payType]:'请选择'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">到岗时间</view>
  <picker bindchange="dutyTimePickerChange" name="dutyTime" value="{{dutyTime}}" range="{{dutyTimePicker}}">
      <view class="picker">
        {{dutyTime?dutyTimePicker[dutyTime]:'请选择'}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">身份证号码</view>
    <input placeholder="请输入身份证号码" name="idcard" type="idcard" value="{{info.idcard}}"></input>
  </view>
  <view class="cu-bar bg-white">
    <view class="action">
      上传身份证照片
    </view>
    <view class="action">
      {{imgList.length}}/2
    </view>
  </view>
  <view class="cu-form-group">
    <view class="grid col-4 grid-square flex-sub">
      <view class="bg-img" wx:for="{{imgList}}" wx:key="index" bindtap="ViewImage" data-url="{{imgList[index]}}">
        <image src='{{imgList[index]}}' mode='aspectFill'></image>
        <view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
          <text class="cuIcon-close"></text>
        </view>
      </view>
      <view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
        <text class="cuIcon-cameraadd"></text>
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-blue lg" bindtap="editBtn" wx:if="{{!btnStatus}}">修改</button>
    <button class="cu-btn bg-blue lg" bindtap="saveBtn" wx:if="{{btnStatus}}">保存</button>
    <button class="cu-btn bg-red margin-tb-sm lg" bindtap="cannelBtn" wx:if="{{btnStatus}}">取消</button>
  </view>
</form>