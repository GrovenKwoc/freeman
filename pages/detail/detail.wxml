      <view class="cu-avatar lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
      <view class="r-right-content">
        <view class="title">
          <view class="text-cut">产品运营
            <text class="fr text-red">12k-15k</text>
          </view>
        </view>
        <view class="content">
          <view class="desc">
            <view class="index-content text-gray">
              <view class="ic-box">
                <text>北京</text>/
                <text>大专及以上</text>/
                <text>1-3年</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
