<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">职位列表</view>
</cu-custom>
<!-- 搜索 -->
  <view class="cu-bar search" style="background-image: var(--gradualBlue);color: var(--white);">
    <view class="search-form round">
      <text class="cuIcon-search"></text>
      <input type="text" placeholder="搜索图片、文章、视频" confirm-type="search"></input>
    </view>
  </view>
<!-- 筛选 -->
<view class="select">
  <view>最新<text class="cuIcon-triangledownfill lg text-gray"></text></view>
  <view>郑州<text class="cuIcon-triangledownfill lg text-gray"></text></view>
  <view>公司<text class="cuIcon-triangledownfill lg text-gray"></text></view>
  <view>要求<text class="cuIcon-triangledownfill lg text-gray"></text></view>
</view>
<!-- 列表 -->
<scroll-view scroll-y style="height: 950rpx;">
<view class="cu-card article no-card" wx:key="idx" bindtap="goDetail" data-id="{{item.id}}">
  <view class="cu-item shadow" wx:for="{{list}}" bindtap="goDetail" data-id="{{item.id}}">
			<view class="title">
				<view class="text-cut">{{item.job_name}}
					<!-- <view class="cu-tag bg-green light sm round">已认证</view> -->
					<text class="fr text-red">{{item.min_price}}-{{item.max_price}}</text>
				</view>
			</view>
			<view class="content">
				<view class="desc">
					<view class="index-content text-gray">
						<view class="ic-box">
							<text>{{item.operator}}</text>
							<text>大专及以上</text>
							<text>{{item.working_years}}</text>
						</view>
						<text>{{item.last_time}}</text>
					</view>
					<view class="index-card-bottom">
						<view class="cu-avatar lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg);"></view>
						<view class="icb-content">
							<view class="text-blank">{{item.company_name}}</view>
							<view class="text-gray text-sm flex">
								<text class="text-cut">
							   天使轮 | 15 - 50 人 | 移动互联网
								</text>
							</view>
						</view>
					</view>
				</view>
			</view>
