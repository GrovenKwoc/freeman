<view class='cu-custom'>
  <view class="cu-bar bg-gradual-blue" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <view class='content' style='top:{{StatusBar}}px;'>职位管理</view>
  </view>
  <scroll-view scroll-x class="bg-white nav">
    <view class="flex text-center">
      <view class="cu-item flex-sub {{index==TabCur?'text-blue cur':''}}" wx:for="{{tabList}}" wx:key bindtap="tabSelect" data-id="{{index}}">
        {{item}}
      </view>
    </view>
  </scroll-view>
  <view class="content">
    <view class="cu-card case {{isCard?'no-card':''}}">
      <view class="job-list-item">
        <view class="job-list-item-header">
          <view class="flex">
            <text class="title">title</text>
            <text>2020.9.10</text>
          </view>
          <view>郑州 | 5-10年 | 本科 | 4-5k</view>
        </view>
        <view class="job-card-btn">
          <view class="btn" bindtap="offline" data-id="1"><text class="cuIcon-down"></text>下线</view>
          <view class="btn"><text class="cuIcon-down"></text>刷新</view>
        </view>
      </view>
    </view>
  </view>
</view>