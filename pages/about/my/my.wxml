<!--pages/my/my.wxml-->
<scroll-view scroll-y class="scrollPage">
  <block wx:if="{{isLogin==false}}">
    <view class="UCenter-bg bg-blue">
      <button open-type="getUserInfo" bindgetuserinfo="getInfo">授权登录</button>
    </view>
  </block>
  <block wx:if="{{isLogin==true}}">
    <block wx:if="{{userType==1}}">
      <view class="UCenter-bg bg-blue">
        <view class="my-top">
          <view>
            <view class="text-xl">{{userInfo.nickname}}
              <text class="cu-tag bg-orange" >
              <block wx:if="{{userInfo.is_verify}}">已实名</block>
              <block wx:if="{{!userInfo.is_verify}}" bindtap="goVerify">未实名</block>
              </text>
            </view>
            <view class="margin-top-sm">
              <text>1593****5991</text>
            </view>
          </view>
          <view bindtap="goPic" class="userAvatarUrl">
            <view class="cu-avatar xl round margin-left" style="background-image:url({{userInfo.head_img}});"></view>
          </view>
        </view>
        <view class="money-list">
          <view>
            <text class="text-yellow">0.00</text>
            <text>钱包提现</text>
          </view>
          <view bindtap="goToPage" data-id="5">
            <text class="text-yellow">67%</text>
            <text>我的简历</text>
          </view>
          <view>
            <text class="text-yellow">14</text>
            <text>关注公司</text>
          </view>
        </view>
        <image src="http://ctziyouren.cn/upload/wave.gif" mode="scaleToFill" class="gif-wave"></image>
      </view>
      <view class="padding flex text-center text-grey bg-white shadow-warp">
        <view class="flex flex-sub flex-direction solid-right" bindtap="goToPage" data-id="1">
          <view class="text-xxl text-orange">
            <text class="cuIcon-post"></text>
          </view>
          <view class="margin-top-sm">已投递</view>
        </view>
        <view class="flex flex-sub flex-direction solid-right" bindtap="goToPage" data-id="2">
          <view class="text-xxl text-orange">
            <text class="cuIcon-roundcheck"></text>
          </view>
          <view class="margin-top-sm">已录用</view>
        </view>
        <view class="flex flex-sub flex-direction" bindtap="goToPage" data-id="3">
          <view class="text-xxl text-orange">
            <text class="cuIcon-friendfamous"></text>
          </view>
          <view class="margin-top-sm">
            已到岗</view>
        </view>
        <view class="flex flex-sub flex-direction" bindtap="goToPage" data-id="4">
          <view class="text-xxl text-orange">
            <text class="cuIcon-pay"></text>
          </view>
          <view class="margin-top-sm">
            已结算</view>
        </view>
      </view>
    </block>
    <block wx:if="{{userType==2}}">
      <view class="UCenter-bg bg-blue flex company-header">
        <view class="cu-avatar xl round margin-left" style="background-image:url(/images/user.jpg);"></view>
        <view class="c-header-text">
          <text>帐户昵称</text>
          <view>河南某某有限公司</view>
        </view>
        <view bindtap="goCertification">
          <text class="cuIcon-evaluate_fill text-white"></text> 公司认证
          <text class="cuIcon-right text-white"></text>
        </view>
      </view>
      <view class="compony_list_box">
        <view class="flex">
          <view class="clb-item" bindtap="goToPage" data-id="7">
            <text>103</text>
            <view>在线职位</view>
          </view>
          <view class="clb-item">
            <text>12</text>
            <view>已应聘</view>
          </view>
          <view class="clb-item">
            <text>0</text>
            <view>已邀请</view>
          </view>
        </view>
      </view>
    </block>
  </block>
  <view class="cu-list menu">
    <block wx:if="{{userType==1}}">
      <view class="cu-item arrow">
        <view class="content" bindtap="toFor">
          <text class="cuIcon-formfill text-green"></text>
          <text class="text-grey">收藏职位</text>
        </view>
      </view>
    </block>
    <block wx:if="{{userType==2}}">
      <view class="cu-item arrow">
        <view class="content" bindtap="companyDetail">
          <text class="cuIcon-github text-grey"></text>
          <text class="text-grey">公司主页</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class="content" bindtap="companyDetail">
          <text class="cuIcon-github text-grey"></text>
          <text class="text-grey">我的收藏</text>
        </view>
      </view>
    </block>
    <view class="cu-item arrow">
      <view class="content" bindtap="goToPage" data-id="6">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">切换身份</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="toFor">
        <text class="cuIcon-formfill text-green"></text>
        <text class="text-grey">意见反馈</text>
      </view>
    </view>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-red margin-tb-sm lg" open-type="contact" bindcontact="handleContact">联系客服</button>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>