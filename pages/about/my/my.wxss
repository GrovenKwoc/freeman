.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg);
  background-size: cover; */
  height: 550rpx;
  color: #fff;
  padding: 180rpx 40rpx 0;
  position: relative;
}

.UCenter-bg .my-top {
  display: flex;
  justify-content: space-between;
  align-content: center;
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .my-top .text-xl{
  font-weight: blod;
  font-size: 50rpx;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}

.userAvatarUrl{
  width: 150rpx;
}

.money-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 60rpx 0 30rpx;
  border-bottom: 1px solid #ddd;
}

.money-list view {
  border-right: 1px solid #ddd;
  padding-right: 70rpx;
}
.money-list view:last-child{
  padding: 0;
  border-right: 0;
}
.money-list view text{
  display: block;
  text-align: center;
  font-size: 30rpx;
}

.text-xxl {
  font-size: 50rpx;
}

.compony_list_box {
  background: #f1f1f1;
  padding: 20rpx 30rpx 0;
}
.compony_list_box>view {
    background: #fff;
    position: relative;
    top: -50rpx;
    padding: 24rpx;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    border-radius: 10rpx;
}

.compony_list_box .clb-item{
  color: #999;
}

.compony_list_box .clb-item view{
  margin-top: 10rpx;
}

.compony_list_box .clb-item text{
  font-size: 36rpx;
  color: #000;
}

.company-header {
  height: 445rpx;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 0;
}

.c-header-text {
  margin-left: -100rpx;
}